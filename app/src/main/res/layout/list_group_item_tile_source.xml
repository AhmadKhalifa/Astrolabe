<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    app:contentPadding="-2dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardCornerRadius="@dimen/spc1"
    android:orientation="horizontal"
    android:layout_marginEnd="@dimen/spc5"
    android:layout_marginTop="@dimen/spc3"
    android:layout_marginBottom="@dimen/spc3"
    android:layout_width="@dimen/tile_source_group_item_width"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/white"
    android:background="@drawable/selector_list_item"
    android:id="@+id/trailerCardView">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/tile_source_group_item_height">

            <ImageView
                android:id="@+id/thumbnailImageView"
                tools:src="@drawable/thumbnail_google_hybrid"
                android:scaleType="centerCrop"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

            <LinearLayout
                android:layout_gravity="bottom"
                android:background="@color/white_transparent"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/nameTextView"
                    android:layout_marginTop="@dimen/spc4"
                    android:layout_marginStart="@dimen/spc4"
                    android:layout_marginEnd="@dimen/spc4"
                    android:textColor="@color/colorAccent"
                    android:textStyle="bold"
                    android:textSize="@dimen/txt2"
                    tools:text="GOOGLE"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/typeTextView"
                    android:layout_marginStart="@dimen/spc4"
                    android:layout_marginEnd="@dimen/spc4"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="@dimen/txt5"
                    tools:text="Hybrid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:layout_marginBottom="@dimen/spc7"
                    android:layout_marginTop="@dimen/spc4"
                    android:layout_marginEnd="@dimen/spc3"
                    android:layout_marginStart="@dimen/spc3"
                    android:clipToPadding="false"
                    android:clipChildren="false"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/addLayerButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/colorAccent"
                        android:drawablePadding="@dimen/spc1"
                        android:drawableStart="@drawable/ic_layers_white_18dp"
                        android:minHeight="0dp"
                        android:layout_marginEnd="@dimen/spc3"
                        android:minWidth="0dp"
                        android:padding="@dimen/spc4"
                        android:text="@string/add_layer"
                        android:textAlignment="center"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="@dimen/txt2"/>


                    <Button
                        android:id="@+id/useMapButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/green"
                        android:drawablePadding="@dimen/spc1"
                        android:layout_marginEnd="@dimen/spc3"
                        android:drawableStart="@drawable/ic_map_white_18dp"
                        android:minHeight="0dp"
                        android:minWidth="0dp"
                        android:padding="@dimen/spc4"
                        android:text="@string/use"
                        android:textAlignment="center"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="@dimen/txt2"/>

                </LinearLayout>

            </LinearLayout>

        </FrameLayout>

    </LinearLayout>



</android.support.v7.widget.CardView>
